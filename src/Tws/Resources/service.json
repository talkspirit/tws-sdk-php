{
    "name": "Tws",
    "apiVersion": "2013-02-07",
    "baseUrl": "",
    "description": "Tws is an API that allows you to use talkSpirit API",
    "operations": {
        "getPublicUserActivity": {
            "httpMethod": "Get",
            "uri": "/users/{user_id}/activitystream?{option}",
            "summary": "Activities - Get a user activity (public)",
            "parameters": {
                "user_id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                },
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getPrivateUserActivity": {
            "httpMethod": "Get",
            "uri": "/users/default/activitystream?{option}",
            "summary": "Activities - Get a user activity (private)",
            "parameters": {
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getActivitystream": {
            "httpMethod": "Get",
            "uri": "/activitystream?{option}",
            "summary": "Activities - Get activity stream",
            "parameters": {
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getNotification": {
            "httpMethod": "Get",
            "uri": "/notifications?{option}",
            "summary": "Activities - Get notifications",
            "parameters": {
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getNotificationCount": {
            "httpMethod": "Get",
            "uri": "/notifications/count?{option}",
            "summary": "Activities - Get notifications count",
            "parameters": {
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "postMedia": {
            "httpMethod": "POST",
            "uri": "media/default",
            "summary": "Add a new Media",
            "responseClass": "Media",
            "parameters": {
                "file": {
                    "location": "postFile",
                    "type": "string",
                    "description": "File path",
                    "required": true
                }
            }
        },
        "getUsers": {
            "httpMethod": "GET",
            "uri": "users/search",
            "summary": "Gets a list of users",
            "responseClass": "GetUsersOutput"
        },
        "getMe": {
            "httpMethod": "GET",
            "uri": "users/default",
            "summary": "Retrieves his profile",
            "responseClass": "GetUserselfOutput"
        },
        "postUser": {
            "httpMethod": "POST",
            "uri": "/users/default",
            "summary": "Creates a new user",
            "responseClass": "CreateUserOutput",
            "parameters": {
                "name": {
                    "location": "json",
                    "type": "string"
                },
                "firstname": {
                    "location": "json",
                    "type": "string"
                },
                "email": {
                    "location": "json",
                    "type": "string"
                }
            }
        },
        "getUser": {
            "httpMethod": "GET",
            "uri": "users/{id}",
            "summary": "Retrieves a single user",
            "responseClass": "GetUserOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                }
            }
        },
        "deleteUser": {
            "httpMethod": "DELETE",
            "uri": "users/{id}",
            "summary": "Deletes a user",
            "responseClass": "DeleteUserOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to delete by ID",
                    "required": true
                }
            }
        }
    },
    "models": {
        "Media": {
            "type": "object",
            "properties": {
                "media": {
                    "location": "json",
                    "type": "string"
                },
                "status": {
                    "location": "statusCode",
                    "type": "integer"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "location": "json",
                    "type": "string"
                },
                "email": {
                    "location": "json",
                    "type": "string"
                },
                "displayname": {
                    "type": "string",
                    "location": "json"
                }
            },
            "GetUsersOutput": {
                "type": "array",
                "items": {
                    "$ref": "User"
                }
            },
            "GetUserOutput": {
                "$ref": "User"
            },
            "DeleteUserOutput": {
                "type": "object",
                "properties": {
                    "status": {
                        "location": "statusCode",
                        "type": "integer"
                    }
                }
            }
        }
    }
}