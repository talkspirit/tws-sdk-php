{
    "operations": {
        "getPosts": {
            "httpMethod": "Get",
            "uri": "discussions/{discussionId}/posts?{option}",
            "summary": "Posts - Get posts",
            "parameters": {
                "discussionId": {
                    "location": "uri",
                    "description": "Discussion to retrieve by ID",
                    "required": true
                },
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getSearchPosts": {
            "httpMethod": "Get",
            "uri": "posts/search?{option}",
            "summary": "Posts - Get posts (search)",
            "parameters": {
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getPost": {
            "httpMethod": "GET",
            "uri": "discussions/{discussionId}/posts/{postId}",
            "summary": "Posts - Get posts",
            "parameters": {
                "discussionId": {
                    "location": "uri",
                    "description": "Discussion to retrieve by ID",
                    "required": true
                },
                "postId": {
                    "location": "uri",
                    "description": "Post to retrieve by ID",
                    "required": true
                }
            }
        },
        "postPost": {
            "httpMethod": "POST",
            "uri": "discussions/{discussionId}/posts/default",
            "summary": "Posts - Create a post",
            "responseClass": "DiscussionPostOutput",
            "parameters": {
                "discussionId": {
                    "location": "uri",
                    "description": "discussion to posting",
                    "required": true
                },
                "post": {
                    "location": "json",
                    "type": "array"
                }
            }
        }
    },
    "models": {
        "DiscussionPostOutput": {
            "type": "object",
            "properties": {
                "post": {
                    "location": "json",
                    "type": "string"
                },
                "statusCode": {
                    "location": "statusCode",
                    "type": "integer"
                }
            }
        }
    }
}
