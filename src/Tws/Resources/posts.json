{
    "operations": {
        "getPosts": {
            "httpMethod": "Get",
            "uri": "discussions/{discussion-id}/posts?{option}",
            "summary": "Posts - Get posts",
            "responseClass": "Post",
            "parameters": {
                "discussion-id": {
                    "location": "uri",
                    "description": "Discussion to retrieve by ID",
                    "required": true
                },
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getSearchPosts": {
            "httpMethod": "Get",
            "uri": "posts/search?{option}",
            "summary": "Posts - Get posts (search)",
            "responseClass": "Post",
            "parameters": {
                "option": {
                    "location": "uri",
                    "description": "additional parameters see documentation",
                    "required": false
                }
            }
        },
        "getPost": {
            "httpMethod": "Get",
            "uri": "discussions/{discussion-id}/posts/{post-id}",
            "summary": "Posts - Get posts",
            "responseClass": "Post",
            "parameters": {
                "discussion-id": {
                    "location": "uri",
                    "description": "Discussion to retrieve by ID",
                    "required": true
                },
                "post-id": {
                    "location": "uri",
                    "description": "Post to retrieve by ID",
                    "required": true
                }
            }
        }
    },
    "models": {
        "Post": {
            "type": "object",
            "properties": {
                "id": {
                    "location": "json",
                    "type": "string"
                },
                "title": {
                    "location": "json",
                    "type": "string"
                },
                "content": {
                    "type": "string",
                    "location": "json"
                }
            },
        "GetPostsOutput": {
                "type": "array",
                "items": {
                    "$ref": "Post"
                }
            },
        "GetPostOutput": {
                "$ref": "Post"
            }
        }
    }
}